<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetworkTroubleshooter.HttpCheckPage"
             Title="HTTP Check Utility">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="HTTP Check Utility"
            FontSize="Large" 
            HorizontalOptions="Center" />

        <Entry x:Name="UrlEntry" Placeholder="Enter full URL (e.g., https://www.google.com)" Keyboard="Url"/>
        
        <Button x:Name="CheckButton" Text="Perform Check" Clicked="OnCheckClicked" />

        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />

        <Label x:Name="StatusLabel" Text="" TextColor="Red" />

        <ScrollView VerticalOptions="FillAndExpand">
             <Editor x:Name="ResultsEditor" IsReadOnly="True" VerticalOptions="FillAndExpand" MinHeightRequest="200"/>
        </ScrollView>
        
    </VerticalStackLayout>
</ContentPage> 