<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetworkTroubleshooter.PortScanPage"
             Title="Port Scan Utility">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="Port Scan Utility"
            FontSize="Large" 
            HorizontalOptions="Center" />

        <Entry x:Name="HostnameEntry" Placeholder="Enter Hostname or IP" />
        <Entry x:Name="PortsEntry" Placeholder="Ports (e.g., 80, 443, 20-25)" />
        
        <HorizontalStackLayout Spacing="10">
            <Label Text="Timeout (ms):" VerticalOptions="Center"/>
            <Entry x:Name="TimeoutEntry" Text="2000" Keyboard="Numeric" WidthRequest="70"/>
        </HorizontalStackLayout>

        <Button x:Name="ScanButton" Text="Start Scan" Clicked="OnScanClicked" />

        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />

        <Label x:Name="StatusLabel" Text="" TextColor="Red" />

        <ScrollView VerticalOptions="FillAndExpand">
             <Editor x:Name="ResultsEditor" IsReadOnly="True" VerticalOptions="FillAndExpand" MinHeightRequest="300"/>
        </ScrollView>
        
    </VerticalStackLayout>
</ContentPage> 