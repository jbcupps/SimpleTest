<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetworkTroubleshooter.TraceroutePage"
             Title="Traceroute Utility">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="Traceroute Utility"
            FontSize="Large" 
            HorizontalOptions="Center" />

        <Entry x:Name="HostnameEntry" Placeholder="Enter Hostname or IP" />
        
        <HorizontalStackLayout Spacing="10">
            <Label Text="Max Hops:" VerticalOptions="Center"/>
            <Entry x:Name="MaxHopsEntry" Text="30" Keyboard="Numeric" WidthRequest="50"/>
            <Label Text="Timeout (ms):" VerticalOptions="Center"/>
            <Entry x:Name="TimeoutEntry" Text="1000" Keyboard="Numeric" WidthRequest="70"/>
        </HorizontalStackLayout>

        <Button x:Name="TracerouteButton" Text="Start Traceroute" Clicked="OnTracerouteClicked" />

        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />

        <Label x:Name="StatusLabel" Text="" TextColor="Red" />

        <ScrollView VerticalOptions="FillAndExpand">
             <Editor x:Name="ResultsEditor" IsReadOnly="True" VerticalOptions="FillAndExpand" MinHeightRequest="300" FontFamily="Monospace"/>
        </ScrollView>
        
    </VerticalStackLayout>
</ContentPage> 